<style>
    .split-screen, .layer, .content-wrap {
        width: 100vw;
        height: 100vh;
        min-height: 30em;
    }
    .split-screen {
        position: relative;
        overflow: hidden;
    }
    .layer {
        position: absolute;
        overflow: hidden;
    }
    .content-wrap {
        position: absolute;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2.5em;
    }
    .layer img, .layer video {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        object-fit: cover;
        z-index: 0;
    }
    .layer::before {
        content: "";
        background-color: rgba(0, 0, 0, 0.4);
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }
    .right {
        z-index: 1;
        color:#ff9b2a;
    }
    .left {
        z-index: 2;
        width: 50vw;
        color: #fff;
        border-right: 8px #ff9b2a  solid;
    }

    .layer h1 {
        max-width: 9em;
        font-size: 3em;
        font-size: clamp(3em, 7vw, 7em);
        line-height: 1em;
    }
    .layer .text {
        z-index: 1;
    }
    .layer .text p {
        margin-top: 1.5em;
        max-width: 400px;
        font-size: 1.2em;
    }

</style>

<section class="split-screen">
    <div class="layer left">
        <div class="content-wrap">
            <div class="text">
                <h1>{{ section.settings.main-text }}</h1>
                <p>{{ section.settings.sub-text }}</p>
            </div>
            {% if section.settings.left-image != blank %}
                <img 
                  src="{{ section.settings.left-image | image_url: width: 1920 }}"
                  width="1920"
                  height="1080">
            {% else %}
                <img
                  src="{{ 'slider-image.jpg' | asset_url}}"
                  width="1920"
                  height="1080">
            {% endif %}
        </div>
    </div>
    <div class="layer right">
        <div class="content-wrap">
            <div class="text">
                <h1>{{ section.settings.main-text }}</h1>
                <p>{{ section.settings.sub-text }}</p>
            </div>
            {% if section.settings.video != blank %}
                {% assign media = section.settings.video %}
                {{ media | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
            {% else %}
            <video src="{{ 'slider-video.mp4' | asset_url }}" autoplay loop muted >
                Your browser does not support the video tag.
            </video>
            {% endif %}
        </div>
    </div>
</section>

<script>
    const wrapper = document.querySelector('.split-screen');
    const topLayer = document.querySelector('.left');

    wrapper.addEventListener('mousemove', splitScreen);
    wrapper.addEventListener('touchmove', splitScreen);

    function splitScreen(e) {
        let x;
        if (e.type === 'touchmove') {
            const touch = e.touches[0];
            x = touch.clientX;
        } else {
            x = e.clientX;
        }
        topLayer.style.width = x + 'px';
    }
</script>

{% schema %}
{
    "name": "Split Screen Banner",
    "settings": [
        {
            "type": "image_picker",
            "id": "left-image",
            "label": "Left Image"
        },
        {
            "type": "video",
            "id": "video",
            "label": "Right Video"
        },
        {
            "type": "text",
            "id": "main-text",
            "label": "Heading",
            "default": "Shop exclusive deals!"
        },
        {
            "type": "text",
            "id": "sub-text",
            "label": "Subtext",
            "default": "Dive right into our trending collection!"
        }
        ]
}
{% endschema %}
